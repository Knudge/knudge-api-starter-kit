{
  "name": "ka-starter-kit",
  "description": "Webcomponent ka-starter-kit following open-wc recommendations",
  "license": "MIT",
  "author": "ka-starter-kit",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^22.18.0",
    "npm": "^11.5.2"
  },
  "scripts": {
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "build": "rimraf dist && tsc && rollup -c rollup.config.mjs && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\" \"node api/watch.mjs\""
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@rollup/plugin-replace": "^5.0.7",
    "@types/koa": "^2.15.0",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "koa-bodyparser": "^4.4.1",
    "lit": "^3.1.4",
    "lodash.debounce": "^4.0.8",
    "nanoid": "^5.0.9"
  },
  "overrides": {
    "devcert": {
      "rimraf": "^5.0.5",
      "tmp": "^0.2.5"
    }
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.7",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-rollup": "^2.2.3",
    "@open-wc/eslint-config": "^9.2.2",
    "@open-wc/testing": "^3.2.2",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/mocha": "^10.0.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@web/dev-server": "^0.4.6",
    "@web/rollup-plugin-html": "^1.11.1",
    "@web/rollup-plugin-import-meta-assets": "^1.0.8",
    "@web/test-runner": "^0.18.2",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "chokidar": "^3.6.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.3.1",
    "devcert": "^1.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^8.10.0",
    "husky": "^4.3.8",
    "koa-proxies": "^0.12.4",
    "lint-staged": "^10.5.4",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-workbox": "^6.2.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true
    },
    "globals": {
      "BigInt64Array": true,
      "BigUint64Array": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true,
    "rules": {
      "class-methods-use-this": "off",
      "consistent-return": "warn",
      "no-console": "off",
      "no-unused-vars": "off",
      "no-use-before-define": "off",
      "prefer-destructuring": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ],
      "no-unused-expressions": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.spec.*"
          ]
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
